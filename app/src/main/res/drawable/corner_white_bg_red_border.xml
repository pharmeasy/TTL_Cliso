<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate
            android:fromDegrees="-45"
            android:pivotX="135%"
            android:pivotY="15%"
            android:toDegrees="45"
            >
            <shape android:shape="rectangle">
                <stroke android:color="@color/red"
                    android:width="1dp"/>
                <corners
                    android:topLeftRadius="1dp"
                    />

            </shape>
        </rotate>
    </item>
</layer-list>
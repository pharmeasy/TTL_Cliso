<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/triangle_bottom"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="-8dp"
        android:background="@drawable/corner_white_bg_red_border"
        android:visibility="invisible" />

    <LinearLayout
        android:id="@+id/responsedatalinear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/show_resp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/response"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColorHint="@color/red"
                android:hint="Not yet responded !"
                android:textColor="@color/DARKGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/respondedby"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="data"
                    android:textColor="@color/darkgreen"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/resdate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="data"
                    android:textColor="@color/DARKGray"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tat"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="data"
                    android:textColor="@color/maroon"
                    android:textSize="10sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/write_response_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="5"
            android:orientation="vertical">

            <EditText
                android:id="@+id/commuTXT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:background="@drawable/maroon_border_white_bg"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789 .,*+-@"
                android:gravity="top"
                android:hint="Compose your message"
                android:lines="5"
                android:padding="10dp"
                android:textAlignment="center"
                android:textSize="14dp" />

            <Button
                android:id="@+id/sendcomm"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="-12dp"
                android:layout_weight="1"
                android:background="@drawable/next_button"
                android:paddingLeft="40dp"
                android:paddingRight="40dp"
                android:text="Send"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                android:textSize="14dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>




<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/colorGray"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_margin="10dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Name"
                android:gravity="center"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:layout_weight="1.25"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="FIRST AND LAST NAME"
                android:layout_weight="3.5"
                android:maxLength="30"
                android:id="@+id/sndest_name"
                android:digits="abcdefghijklmnopqrstuvwxyz "
                android:layout_marginLeft="35dp"
                android:textSize="15sp"
                android:background="@color/colorWhite"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Mobile No"
                android:gravity="center"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="e.g. 99XXXXXXXX"
                android:layout_weight="1.99"
                android:textSize="15sp"
                android:inputType="phone"
                android:id="@+id/sndnumber"
                android:maxLength="10"
                android:background="@color/colorWhite"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Email"
                android:gravity="center"
                android:textAlignment="textStart"
                android:padding="5dp"
                android:layout_weight="1"
                />
            <EditText
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:hint="e.g. xyz@gmail.com"
                android:layout_weight="2.8"
                android:id="@+id/sndemail"
                android:textSize="15sp"
                android:digits="abcdefghijklmnopqrstuvwxyz1234567890@._"
                android:layout_marginLeft="35dp"
                android:background="@color/colorWhite"
                />
        </LinearLayout>


    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/orange"
        android:text="Send Estimate"
        android:id="@+id/sendEstimation"
        android:textColor="@color/colorWhite"
        />
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parent_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="7dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="13dp"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".Fragment.LedgerFragment">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/cement_light">

                <Spinner
                    android:id="@+id/month"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/maroon" />
            </LinearLayout>

            <LinearLayout
                android:paddingLeft="3dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:background="@color/cement_light">

                <Spinner
                    android:id="@+id/year"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/maroon" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/credit_limit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="0.7"
            android:background="@color/cement_light"
            android:gravity="center"
            android:text="Credit Limit : 2,58,374"
            android:textColor="@color/maroon"
            android:textSize="16dp"
            android:textStyle="italic|bold" />

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="7.9"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:weightSum="9">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="14dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/iv1"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/opening_bal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Opening Balance"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/open_bal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="2,48,635"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/iv2"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/closing_bal" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Closing Balance"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/closing__bal"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="2,02,719"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="14dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/iv3"
                            android:layout_width="140dp"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginBottom="5dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/credit" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Credit"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/credit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="48,635"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/iv4"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/debit" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Debit"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/debit"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="27,481"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="10">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="25dp"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/billed_amount" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Billed Amount"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/billed_amt"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="2,48,635"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:background="@drawable/ledger_back_img"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:layout_weight="5"
                        android:orientation="vertical"
                        android:weightSum="10">

                        <ImageView
                            android:id="@+id/iv6"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_margin="7dp"
                            android:layout_weight="6"
                            app:srcCompat="@drawable/cash_check" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-5dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="Cash/ Check"
                            android:textColor="@color/maroon"
                            android:textSize="15dp" />

                        <TextView
                            android:id="@+id/cash_cheque"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginTop="-2dp"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="2,48,635"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_weight="0.7"
            android:background="@color/colorWhite"
            android:orientation="vertical"
            android:weightSum="10">

            <Button
                android:id="@+id/ledgerdetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/maroon"
                android:text="LEDGER DETAILS"
                android:textColor="@color/white"
                android:textSize="16dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/offline_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="100dp"
            android:layout_weight="3"
            android:src="@drawable/offline_gifimg" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="top|center"
            android:text="  Sorry ! You are offline..."
            android:textColor="@color/maroon"
            android:textSize="18sp" />

    </LinearLayout>

</FrameLayout>
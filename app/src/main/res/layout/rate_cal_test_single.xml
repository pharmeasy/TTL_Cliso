<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/underline_grey"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="25dp"
    android:paddingBottom="10dp"
    android:id="@+id/parent_ll"
    android:weightSum="5">

    <TextView
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_margin="5dp"
        android:layout_weight="0.7"
        android:background="@drawable/next_button"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/txt_type"
        android:text="P"
        android:textColor="@color/white"
        android:textSize="20dp" />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="4.9"
        android:orientation="vertical"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/test_name_rate_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:paddingTop="2dp"
            android:text="Aarogyam C"
            android:textColor="@color/grey"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/test_rate_cal_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="â‚¹ 1100/-"
            android:textColor="@color/grey"
            android:textSize="12dp" />
    </LinearLayout>


    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.1"
        android:background="@drawable/checkedcheckbox_rate"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/iv_unchecked"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.1"
        android:background="@drawable/check_ref" />

    <ImageView
        android:id="@+id/iv_locked"
        android:layout_width="13dp"
        android:layout_height="20dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_weight="0.1"
        android:background="@drawable/gray_check"
        android:visibility="gone" />

</LinearLayout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10">
    <!--Left Column Start-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/color_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="Upload Document"
            android:textAllCaps="true"
            android:textSize="@dimen/header"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/color_homr" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9"
        android:weightSum="9.4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal"
                android:layout_marginBottom="5dp">
                
                <Spinner
                    android:id="@+id/category_spr1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:textColor="@color/DARKGray"
                    android:textSize="@dimen/value"
                    android:backgroundTint="@color/maroon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/nedll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/ned_spr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:textColor="@color/DARKGray"
                    android:textSize="@dimen/value"
                    android:backgroundTint="@color/maroon" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/sgcll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/sgc_spr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:textColor="@color/DARKGray"
                    android:textSize="@dimen/value"
                    android:backgroundTint="@color/maroon" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/pgcll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/pgc_spr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/DARKGray"
                    android:layout_margin="5dp"
                    android:textSize="@dimen/value"
                    android:backgroundTint="@color/maroon" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">


                <Spinner
                    android:id="@+id/document_spr"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:textColor="@color/DARKGray"
                    android:textSize="@dimen/value"
                    android:layout_margin="5dp"
                    android:backgroundTint="@color/maroon" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/border_background_maroon"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/edt_purpose"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_margin="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.5"
                    android:background="@drawable/background_edt"
                    android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.,:/@0123456789 "
                    android:gravity="left"
                    android:hint="Enter Purpose"
                    android:maxLines="1"
                    android:textSize="11dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">


                <LinearLayout
                    android:id="@+id/ll_upload"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:layout_margin="5dp">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"

                        android:layout_weight="1.5"
                        android:background="@color/transparent"
                        android:gravity="left|center"
                        android:hint="UPLOAD DOCUMENT"
                        android:maxLines="1"
                        android:paddingRight="6dp"
                        android:textAllCaps="true"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/value" />

                    <TextView
                        android:id="@+id/preview_img_txt"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Preview"
                        android:textColor="@color/white"
                        android:textStyle="italic|bold"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/gtick"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:src="@drawable/gtick"
                        android:visibility="gone" />

                    <ImageView
                        android:id="@+id/pick_img"
                        android:layout_width="20dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:layout_weight="0.1"
                        android:padding="5dp"
                        android:tint="@color/maroon"
                        android:src="@drawable/small_cam"
                         />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_remarks"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:background="@color/transparent"
                    android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.,:/@0123456789 "
                    android:gravity="left"
                    android:hint="ENTER PURPOSE*"
                    android:maxLines="1"
                    android:textSize="@dimen/value" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/expiryll"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/corner_curve_maroon"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1.5"
                    android:gravity="left"
                    android:hint=""
                    android:text="Expiry Date*"
                    android:textAllCaps="true"
                    android:textColor="@color/DARKGray"
                    android:textSize="@dimen/value" />


                <TextView
                    android:id="@+id/edt_expiry"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left|center"
                    android:layout_weight="1"
                    android:drawablePadding="70dp"
                    android:gravity="center"
                    android:paddingRight="6dp"
                    android:textSize="@dimen/value" />

                <ImageView
                    android:id="@+id/edt_expiry1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="10dp"
                    android:src="@drawable/calender_color" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_order_action"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/next_button"
                    android:hint="Action"
                    android:textColorHint="@color/colorWhite"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_submit"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/next_button"
                    android:hint="SUBMIT"
                    android:textSize="@dimen/label"
                    android:textColorHint="@color/colorWhite" />

                <Button
                    android:id="@+id/btn_update"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/next_button"
                    android:hint="Update"
                    android:textSize="@dimen/label"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"
                    android:visibility="gone" />


            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout><!--Left Column End-->

    <!--Right Column Start-->

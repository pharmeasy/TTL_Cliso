<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Gray"
    android:orientation="vertical"
    tools:context="com.example.e5322.thyrosoft.RateCalculator.Test_Rate_Fragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="40dp"
        android:background="@color/colorWhite"
        android:layout_margin="10dp"
        android:id="@+id/selected_test_display"
        >
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/button_background"
            android:id="@+id/lineargetselectedtestforILS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:text=" Selected Tests"
                    android:textColor="@color/colorBlack"
                    />
                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="Reset"
                    android:layout_margin="5dp"
                    android:id="@+id/resetbutton"
                    android:visibility="gone"
                    />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGray" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="kjcnhkjcnkjn"
                android:id="@+id/show_selected_tests_list_test_ils"
                android:gravity="center|left"
                android:padding="5dp"
                />
        </LinearLayout>

    </LinearLayout>


     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:minHeight="30dp"
         android:background="@drawable/border_background"
         android:layout_margin="10dp"
         >
         <EditText
             android:background="@color/light_gray"
             android:layout_width="wrap_content"
             android:hint="Discount"
             android:padding="5dp"
             android:id="@+id/discountEdit"
             android:layout_margin="8dp"
             android:textSize="15sp"
             android:layout_height="match_parent"
             android:layout_weight="3"
             />
         <Button
             android:layout_width="50dp"
             android:layout_height="match_parent"
             android:text="GO"
             android:id="@+id/calculateDiscount"
             android:layout_margin="2dp"
             android:layout_weight="0.1"
             />
     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="80dp"
        android:background="@drawable/border_background"
        android:layout_margin="10dp"
        >

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:text="Before Discount"
           android:layout_marginLeft="5dp"
           android:textColor="@color/colorBlack"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:background="@color/maroon"
            android:gravity="center_horizontal"
            android:weightSum="4">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="3dp"
                android:text="CHARGES"
                android:textColor="#000000" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:text="LOGISTIC COST"
                android:textColor="#000000"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="COLLECTION CHARGES"
                android:textColor="#000000" />
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:text="TO COMPANY"
                android:layout_gravity="center"
                android:textColor="#000000" />

        </TableRow>
        <TableRow
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/chargeRate"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="3dp"
                android:text="CHARGES"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/logisticRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="LOGISTIC COST"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/collectionCharge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="center"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="COLLECTION CHARGES"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/companycost"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:gravity="center"
                android:textSize="12sp"
                android:text="TO COMPANY"
                android:layout_gravity="center"
                android:textColor="#000000" />

        </TableRow>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="80dp"
        android:id="@+id/afterDiscountLayout"
        android:background="@drawable/border_background"
        android:layout_margin="10dp"
        android:visibility="gone"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="After Discount"
            android:layout_marginLeft="5dp"
            android:textColor="@color/colorBlack"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGray" />
        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:background="@color/maroon"
            android:gravity="center_horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/TextView177"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="3dp"
                android:text="CHARGES"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/TextView277"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:text="LOGISTIC COST"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/TextView323"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:text="COLLECTION CHARGES"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/TextView477"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:text="TO COMPANY"
                android:layout_gravity="center"
                android:textColor="#000000" />

        </TableRow>
        <TableRow
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="25dp"
            android:background="@color/colorWhite"
            android:gravity="center_horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/afterCharge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="12sp"
                android:padding="3dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/afterlogistic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"

                android:layout_gravity="center"
                android:textColor="#000000"
                />

            <TextView
                android:id="@+id/aftercollection"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="#000000" />
            <TextView
                android:id="@+id/aftercompany"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="3dp"
                android:textSize="12sp"
                android:layout_gravity="center"
                android:textColor="#000000" />

        </TableRow>


    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:background="@color/colorWhite"
        android:layout_gravity="center"
        android:id="@+id/nxt"
        />

</LinearLayout>

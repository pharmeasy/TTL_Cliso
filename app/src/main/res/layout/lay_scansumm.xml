<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rel_dt"
        android:layout_width="@dimen/_110sdp"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/border"
        android:layout_gravity="right"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/to_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|start"
            android:layout_margin="3dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/black"
            android:drawableRight="@drawable/small_cal"
            android:drawablePadding="@dimen/dp_5"
            android:layout_alignParentRight="true"
            android:gravity="end|center"
            android:textSize="13sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/dp_5"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/lin_header"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="@color/maroon"
            android:weightSum="5"
            android:visibility="visible"
            android:layout_height="@dimen/dp_40">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="wrap_content"
                android:text="SR.NO"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textAllCaps="true"
               android:fontFamily="@font/gotham_bold"
                android:textSize="12sp"
                android:layout_margin="@dimen/dp_2"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:text="OS"
                android:textSize="12sp"
                android:fontFamily="@font/gotham_bold"
                android:textAllCaps="true"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_2"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:textSize="12sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_margin="@dimen/dp_2"
                android:fontFamily="@font/gotham_bold"
                android:layout_height="wrap_content"
                android:text="Used"
                android:textAllCaps="true"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_weight="1"
                android:fontFamily="@font/gotham_bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Wastage"
                android:textAllCaps="true"
                android:layout_margin="@dimen/dp_2"
                android:textColor="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_weight="0.01"
                android:layout_height="match_parent"
                android:background="@color/white" />

            <TextView
                android:layout_width="0dp"
                android:textSize="12sp"
                android:layout_weight="1.2"
                android:fontFamily="@font/gotham_bold"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="CS"
                android:textAllCaps="true"
                android:layout_margin="@dimen/dp_2"
                android:textColor="@color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin_border"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recy_mis"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>


        <TextView
            android:id="@+id/txt_nodata"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="103dp"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/black"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center"
            android:visibility="gone"
            android:text="No Record Found"
            android:textSize="13sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_alignParentBottom="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="OS : Opening Stock"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:fontFamily="@font/gotham_bold"
                    android:textColor="@color/black"
                    android:drawablePadding="@dimen/dp_5"
                    android:gravity="center"
                    android:text="CS : Closing Stock"
                    android:textSize="13sp" />

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
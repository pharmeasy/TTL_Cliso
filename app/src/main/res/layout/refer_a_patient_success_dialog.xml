<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/smallPadding"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginBottom="@dimen/smallPadding"
        android:background="@color/maroon"
        android:gravity="end"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/booking_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:gravity="center"
            android:text="Lead generated successfully"
            android:textColor="@color/white"
            android:textSize="@dimen/subHeadSize"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/btnclose"
            android:layout_width="@dimen/dp_35"
            android:layout_height="@dimen/dp_35"
            android:layout_gravity="end|center"
            android:layout_weight="0.02"
            android:padding="@dimen/smallPadding"
            android:src="@drawable/close_icon_white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/verysmallpadding1"
        android:background="@drawable/tv_background"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/booking_id"
                    android:textColor="@color/white"
                    android:textSize="@dimen/watsappSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/booking_ID"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:singleLine="true"
                android:text="A22S04"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="Patient name"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:padding="@dimen/dp_5"
                android:text="Test Entry"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text="@string/tv_mob_no"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_mobile"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:maxLines="1"
                android:padding="@dimen/dp_5"
                android:text="9137985277"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_email_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/tv_email"
                    android:textColor="@color/white"
                    android:textSize="@dimen/watsappSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_email_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:padding="@dimen/dp_5"
                android:text="kalpesh.borane@thyrocare.com"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/tv_addr"
                    android:textColor="@color/white"
                    android:textSize="@dimen/watsappSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:padding="@dimen/dp_5"
                android:text="Navi Mumbai"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_remarks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.7"
                android:background="@drawable/tv_filled_background"
                android:gravity="center_vertical|start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:text="@string/remarks"
                    android:textColor="@color/white"
                    android:textSize="@dimen/watsappSize"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_remarks"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.3"
                android:padding="@dimen/dp_5"
                android:text="Entered Remarks"
                android:textColor="@color/black"
                android:textSize="@dimen/watsappSize" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/smallPadding11"
            android:layout_marginTop="@dimen/smallPadding11"
            android:text="Note : "
            android:textColor="@color/black"
            android:textSize="@dimen/watsappSize" />

        <TextView
            android:id="@+id/note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/smallPadding11"
            android:text="kalpesh Borane will be contacted for availing service"
            android:textColor="@color/black"
            android:textSize="@dimen/watsappSize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_whatsapp"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/ic_whatsapp" />

        <ImageView
            android:id="@+id/img_mail"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/ic_gmail" />

        <ImageView
            android:id="@+id/img_sms"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"
            android:layout_margin="@dimen/dp_5"
            android:src="@drawable/ic_sms" />

    </LinearLayout>
</LinearLayout>

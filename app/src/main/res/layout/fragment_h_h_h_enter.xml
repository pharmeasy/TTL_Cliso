<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HHHtest.HHHEnterFrag">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioGroup
                    android:id="@+id/rg_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal" />

            </HorizontalScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_spinnerlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/corner_curve_maroon"
            android:padding="@dimen/_5sdp"
            android:visibility="gone">
            <Spinner
                android:id="@+id/spr_test"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:background="@color/transparent"
                android:gravity="center|left" />
        </LinearLayout>


        <!--Verify View-->
        <LinearLayout
            android:id="@+id/ll_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                
                <RadioGroup
                    android:id="@+id/radiogrp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:layout_weight="1.5"
                    android:gravity="center"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/by_missed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:buttonTint="@color/maroon"
                        android:checked="true"
                        android:text="@string/misscallccc"
                        android:textAllCaps="true"
                        android:textSize="@dimen/note" />

                    <RadioButton
                        android:id="@+id/by_generate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0."
                        android:layout_marginRight="@dimen/dp_5"
                        android:buttonTint="@color/maroon"
                        android:text="@string/generateccc"
                        android:textAllCaps="true"
                        android:textSize="@dimen/note" />
                </RadioGroup>

                <LinearLayout
                    android:id="@+id/lin_missed_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1.5"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/edt_missed_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_2sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="0.8"
                        android:background="@drawable/corner_curve_maroon"
                        android:drawablePadding="@dimen/_2sdp"
                        android:hint="MOBILE NUMBER*"
                        android:inputType="number"
                        android:maxLength="10"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/value" />


                    <Button
                        android:id="@+id/btn_generate"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_26sdp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_1sdp"
                        android:layout_weight="0.2"
                        android:background="@drawable/covidbtn"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:backgroundTint="@color/maroon"
                        android:textColor="@color/white"
                        android:textSize="@dimen/value" />

                </LinearLayout>
            </LinearLayout>

            

            

            <RelativeLayout
                android:id="@+id/rel_mobno"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_mobileno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/dp_5"
                    android:textAllCaps="false"
                    android:textColor="@color/maroon"
                    android:textSize="@dimen/value"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_resetno"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/tv_mobileno"
                    android:textAllCaps="false"
                    android:textColor="@color/maroon"
                    android:textSize="@dimen/value"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout

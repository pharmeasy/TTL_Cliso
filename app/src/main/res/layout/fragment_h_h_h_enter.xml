                    android:textAllCaps="true"
                    android:textColor="@color/maroon"
                    android:textSize="@dimen/value" />

                <TextView
                    android:id="@+id/txt_nofileadhar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1.4"
                    android:drawablePadding="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value" />

                <LinearLayout
                    android:id="@+id/lin_adhar_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1.4"
                    android:drawablePadding="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_adharfileupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/black"
                        android:textSize="@dimen/value"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <!--trffile view-->
            <LinearLayout
                android:id="@+id/ll_trfview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_trf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.8"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/trf"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_choosefile_trf"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="0.8"
                    android:background="@drawable/covidbtn"
                    android:backgroundTint="@color/maroon"
                    android:text="@string/uploadfile"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/value" />

                <TextView
                    android:id="@+id/txt_nofiletrf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1.4"
                    android:drawablePadding="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value" />


                <LinearLayout
                    android:id="@+id/lin_trf_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1.4"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/txt_trffileupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/value"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>

            <!--otherfile view-->
            <LinearLayout
                android:id="@+id/ll_otherview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <TextView
                    android:id="@+id/txt_other"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_5sdp"
                    android:layout_weight="0.8"
                    android:drawablePadding="@dimen/_2sdp"
                    android:text="@string/other"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_choosefile_other"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_26sdp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="0.8"
                    android:background="@drawable/covidbtn"
                    android:backgroundTint="@color/maroon"
                    android:text="Upload"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/value" />

                <TextView
                    android:id="@+id/txt_nofileother"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_weight="1.4"
                    android:drawablePadding="@dimen/_2sdp"
                    android:padding="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/value" />


                <LinearLayout
                    android:id="@+id/lin_other_images"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_weight="1.4"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/txt_otherfileupload"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/value"
                        android:textStyle="bold" />

                </LinearLayout>


            </LinearLayout>

            <!--disclaimer view-->
            <LinearLayout
                android:id="@+id/ll_diclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <CheckBox
                    android:id="@+id/cb_disclaimer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/value"
                    android:text="DISCLAIMER" />


            </LinearLayout>


        </LinearLayout>

        <!--submit/reset view-->
        <LinearLayout
            android:id="@+id/ll_submitview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">
            <Button
                android:id="@+id/btn_reset"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_toLeftOf="@+id/btn_submit"
                android:background="@drawable/clear_button"
                android:text="RESET"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/value" />


            <Button
                android:id="@+id/btn_submit"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_26sdp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_3sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/covidbtn"
                android:text="@string/submit"
                android:backgroundTint="@color/maroon"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/value" />

        </LinearLayout>

    </LinearLayout>


<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_1"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/tv_srno"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="0.8"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        android:visibility="visible"
        tools:text="581" />

    <TextView
        android:id="@+id/tv_mob"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="1.9"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="9874563210" />

    <TextView
        android:id="@+id/tv_reqTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="1.4"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="4:00:00 PM" />

    <TextView
        android:id="@+id/tv_recvTime"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="1.4"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="4:00:40 PM" />

    <TextView
        android:id="@+id/tv_verified"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="1.3"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="Yes" />

    <TextView
        android:id="@+id/tv_credit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dp_05"
        android:layout_weight="1.2"
        android:background="@color/white"
        android:gravity="center"
        android:padding="@dimen/dp_3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_13"
        tools:text="Yes" />

</TableRow>
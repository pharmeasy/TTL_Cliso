<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_close"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="right"
        android:layout_margin="@dimen/_3sdp"
        android:src="@drawable/icclose" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutVideo"
            android:layout_width="match_parent"
            android:background="@drawable/border"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:gravity="center"
            android:layout_height="@dimen/_160sdp">

            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="@dimen/dp_5"
                android:src="@drawable/thumbnailicon"
                android:background="@color/transparent"
                android:padding="@dimen/dp_5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linvid"
            android:layout_width="match_parent"
            android:background="@drawable/border"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <VideoView
                    android:id="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp" />

                <ImageView
                    android:id="@+id/img_start"
                    android:layout_width="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_play"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/video_view"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_height="@dimen/_20sdp" />

                <ImageView
                    android:id="@+id/img_pause"
                    android:layout_width="@dimen/_20sdp"
                    app:srcCompat="@drawable/ic_pause"
                    android:visibility="invisible"
                    android:layout_alignBottom="@+id/video_view"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_height="@dimen/_20sdp" />

                <android.support.v7.widget.AppCompatSeekBar
                    android:layout_toRightOf="@+id/img_start"
                    android:layout_toEndOf="@+id/img_start"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/video_view"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:indeterminate="false"
                    android:id="@+id/seekBar" />

                <RelativeLayout
                    android:layout_alignBottom="@+id/video_view"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/img_pause"
                    android:padding="@dimen/_4sdp"
                    android:id="@+id/rel_time"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/txt_ctime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/maroon"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:fontFamily="@font/gotham_book"
                         />

                    <TextView
                        android:id="@+id/txt_toltime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/maroon"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/_8sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:fontFamily="@font/gotham_book"
                        />

                </RelativeLayout>


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_below="@+id/linvid"
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/gotham_bold"
                android:text="@string/title" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:fontFamily="@font/gotham_bold"
                android:text=":" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_6sdp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/_5sdp"
                android:fontFamily="@font/gotham_book"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_below="@+id/lin1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_6sdp"
            android:layout_marginRight="@dimen/_6sdp"
            android:layout_marginBottom="@dimen/_6sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                android:fontFamily="@font/gotham_bold"
                android:textSize="@dimen/_12sdp"
                android:text="@string/desc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/maroon"
                android:fontFamily="@font/gotham_bold"
                android:textSize="@dimen/_12sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:text=":" />

            <TextView
                android:id="@+id/txt_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/_6sdp"
                android:fontFamily="@font/gotham_book"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
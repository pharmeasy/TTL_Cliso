<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".RevisedScreenNewUser.Consignment_entry_form">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/enter_entered_layout_consign"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/enter_entered_border_curve"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/enter_ll_unselected_consign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/enter_consign"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:background="@color/lightgray"
                            android:gravity="center"
                            android:text="Wind-Up"
                            android:textColor="@color/colorBlack" />

                        <ImageView
                            android:id="@+id/enter_arrow_enterss"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-1dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/rev_triangle"
                            android:visibility="gone" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/unchecked_entered_ll_consign"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="4">

                        <TextView
                            android:id="@+id/enetered_consign"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:text="Consignment Entry"
                            android:textColor="@color/colorBlack" />

                        <ImageView
                            android:id="@+id/enter_arrow_enteredss"
                            android:layout_width="20dp"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-1dp"
                            android:layout_weight="1"
                            android:scaleType="fitXY"
                            android:src="@drawable/rev_triangle"
                            android:visibility="gone" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/transport_details_ll"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:background="@color/colorWhite"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="4dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_corner_bordered_rect"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/underline_maroon"
                            android:text="Transport Details"
                            android:textColor="@color/maroon"
                            android:textSize="15dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.8"
                            android:padding="0dp"
                            android:text="Routing Code"
                            android:textColor="@color/maroon"
                            android:textSize="12dp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2.2"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <RadioGroup
                                android:id="@+id/radiogrp"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_weight="2"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:weightSum="3">

                                <RadioButton

                                    android:id="@+id/direct"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:buttonTint="@color/maroon"
                                    android:scrollbarSize="10dp"
                                    android:text="Direct"
                                    android:textColor="@color/maroon"
                                    android:textSize="12dp" />

                                <RadioButton
                                    android:id="@+id/through_tsp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="2"
                                    android:buttonTint="@color/maroon"
                                    android:text="Through another TSP"
                                    android:textColor="@color/maroon"
                                    android:textSize="12dp" />
                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:padding="2dp"
                        android:id="@+id/source_code_to_pass"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:textSize="12sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center|left"
                            android:text="Enter the source code"
                            android:textColor="@color/maroon" />

                        <EditText
                            android:textSize="12sp"
                            android:textColor="@color/maroon"
                            android:background="@color/white"
                            android:id="@+id/source_code_pass"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:digits="0123456789QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuioplkjhgfdsazxcvbnm"
                            android:hint="Flight Number"
                            android:textColorHint="@color/maroon" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/mode_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/maroon"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/flight_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/filght_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:backgroundTint="@color/maroon"
                            android:textSize="12sp" />
                        <!--<string-array name="filght_spinner_values">
                        <item>Select Airlines</item>
                        <item>JET Airways</item>
                        <item>Indian Airlines</item>
                        <item>Others</item>-->
                    </LinearLayout>

                    <LinearLayout
                        android:padding="2dp"
                        android:id="@+id/flight_number_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/maroon"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:id="@+id/flight_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:hint="Flight Number"
                            android:maxLength="25"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bus_spinner_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/bus_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:backgroundTint="@color/maroon"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/maroon_border_white_bg"
                        android:id="@+id/bus_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/grey"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:id="@+id/bus_edt_txt"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/white"
                            android:buttonTint="@color/maroon"
                            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz "
                            android:hint="Enter Bus Name"
                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_margin="2dp"
                        android:id="@+id/bus_number_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/marronFaint"
                            android:background="@color/white"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/bus_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz"
                            android:gravity="center|left"
                            android:hint="Enter Bus Number"
                            android:maxLength="15"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expected_depature_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:text="Enter Expected Depature Time"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />

                        <TextView

                            android:id="@+id/expected_departure_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:hint="Departure Time"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/marronFaint"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/expected_arrival_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:text="Enter Expected Time Arrival"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/expected_arrival_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:hint="Expected Time Arrival"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/marronFaint"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_margin="2dp"
                        android:id="@+id/courier_spinner_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <Spinner
                            android:id="@+id/courier_spinner"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:backgroundTint="@color/maroon"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/courier_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:padding="1dp"
                            android:layout_marginTop="2dp"
                            android:layout_marginBottom="2dp"
                            android:layout_marginRight="2dp"
                            android:layout_marginLeft="5dp"
                            android:background="@color/white"
                            android:id="@+id/name_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ."
                            android:gravity="center|left"
                            android:hint="Enter name of person"
                            android:maxLength="25"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/marronFaint"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hand_del_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">


                        <EditText
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/grey"
                            android:id="@+id/hand_name_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz ."
                            android:gravity="center|left"
                            android:background="@color/white"
                            android:layout_margin="3dp"
                            android:hint="Enter name of person"
                            android:maxLength="25"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dispatch_time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <TextView
                            android:layout_marginLeft="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:text="Enter Dispatch Time"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/dispatch_time"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:gravity="center|left"
                            android:hint="Dispatch Time"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/marronFaint"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/consignment_number_ll"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/consignment_no_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="3dp"
                            android:background="@color/white"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:digits="0123456789ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz 0123456789"
                            android:hint="Consignment no"
                            android:maxLength="15"
                            android:textColor="@color/maroon"
                            android:textColorHint="@color/grey"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/consignment_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:visibility="gone"
                        android:layout_margin="2dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:text="* Click to scan consignment barcode"
                            android:textColor="@color/maroon"
                            android:textSize="7dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_scan_consignment_barcode"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/scan_barcode" />

                            <Button
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:id="@+id/consignment_barcd_btn"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="4"
                                android:background="@color/maroon"
                                android:hint="Consignment Barcode"
                                android:textSize="12sp" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/img_edt"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/corner_curve_maroon"
                                android:src="@drawable/edit_consign" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/maroon"
                        android:id="@+id/lineareditbarcode"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:textColorHint="@color/grey"
                            android:textColor="@color/maroon"
                            android:paddingLeft="5dp"
                            android:id="@+id/enter_barcode"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                            android:hint="Enter barcode"
                            android:inputType="textCapCharacters"
                            android:maxLength="11"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <EditText
                                android:paddingLeft="5dp"
                                android:id="@+id/reenter"
                                android:layout_width="0dp"
                                android:layout_height="20dp"
                                android:layout_weight="4"
                                android:background="@color/white"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                android:hint="Renter barcode"
                                android:inputType="textCapCharacters"
                                android:maxLength="11"
                                android:textColorHint="@color/grey"
                                android:textColor="@color/maroon"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/setback"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:src="@drawable/upbarcode" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/total_sample_layout"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/total_consignment_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:buttonTint="@color/maroon"
                            android:digits="0123456789"
                            android:gravity="center|left"
                            android:inputType="number"
                            android:text="Total Sample"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/rpl_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:gravity="center"
                            android:inputType="number"
                            android:text="RPL"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/cpl_edt_txt"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:digits="0123456789"
                            android:gravity="center|left"
                            android:inputType="number"
                            android:text="CPL"
                            android:textColor="@color/maroon"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bsv_barcode_scanning_ll"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_margin="2dp"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/maroon_border_white_bg"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <TextView
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="0dp"
                            android:layout_weight="1"
                            android:text="* Click to scan BSV barcode"
                            android:textColor="@color/maroon"
                            android:textSize="7dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="6dp"
                            android:layout_weight="2"
                            android:orientation="horizontal"
                            android:weightSum="5">

                            <ImageView
                                android:id="@+id/img_scan_bsv_barcode"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_margin="0dp"
                                android:layout_weight="1"
                                android:src="@drawable/scan_barcode" />

                            <Button
                                android:textColor="@color/white"
                                android:textColorHint="@color/white"
                                android:id="@+id/bsv_barcode_scanning"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_weight="4"
                                android:background="@color/maroon"
                                android:hint="BSV Barcode"
                                android:textSize="12sp" />

                            <ImageView
                                android:visibility="gone"
                                android:id="@+id/img_edt_bsv"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="0.5"
                                android:background="@drawable/corner_curve_maroon"
                                android:src="@drawable/edit_consign" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:background="@color/maroon"
                        android:id="@+id/lineareditbarcodebsv"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_margin="2dp"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <EditText
                            android:textColorHint="@color/grey"
                            android:textColor="@color/maroon"
                            android:paddingLeft="5dp"
                            android:id="@+id/enter_barcodebsv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@color/white"
                            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                            android:hint="Enter barcode"
                            android:inputType="textCapCharacters"
                            android:maxLength="8"
                            android:textSize="15sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="5"
                            android:orientation="horizontal">

                            <EditText
                                android:textColorHint="@color/grey"
                                android:textColor="@color/maroon"
                                android:paddingLeft="5dp"
                                android:id="@+id/reenterbsv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="4"
                                android:background="@color/white"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890"
                                android:hint="Renter barcode"
                                android:inputType="textCapCharacters"
                                android:maxLength="8"
                                android:textSize="15sp" />

                            <ImageView
                                android:id="@+id/setbackbsv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.5"
                                android:src="@drawable/upbarcode" />
                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/submit_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_margin="2dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="1"
                        android:background="@drawable/white_corner_bg"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:visibility="gone">

                        <Button
                            android:id="@+id/Submit_consignment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:background="@drawable/next_button"
                            android:paddingLeft="50dp"
                            android:paddingRight="50dp"
                            android:text="Submit"
                            android:textAllCaps="false"
                            android:textColor="@color/white"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btn_to_next_ll"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="7dp"
                        android:layout_weight="1"
                        android:background="@drawable/maroon_border_white_bg"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:weightSum="5">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|right"
                            android:gravity="right"
                            android:layout_weight="4.3"
                            android:text="Next"
                            android:textColor="@color/maroon"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image"
                            android:layout_width="0dp"
                            android:layout_height="41dp"
                            android:layout_gravity="center|right"
                            android:layout_marginRight="5dp"
                            android:layout_weight="0.7"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:src="@drawable/forward"
                            app:civ_border_color="@color/maroon"
                            app:civ_border_width="2dp"
                            app:civ_fill_color="@color/maroon" />

                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>

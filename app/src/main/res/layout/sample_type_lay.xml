<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/underline_grey"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_sample"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingStart="@dimen/_2sdp"
        android:paddingEnd="@dimen/_2sdp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
      >
        <ImageView
            android:id="@+id/sample_indicator"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textColor="@color/black"
            android:text="Test Type"
            android:paddingStart="@dimen/_8sdp"
            android:gravity="start|center"
            android:textSize="18dp"
            android:layout_marginStart="@dimen/_5sdp" android:textStyle="bold" />

        <TextView
            android:id="@+id/text_barcode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="#Barcode"
            android:textColor="@color/black"
            android:textSize="@dimen/_20sdp"
            android:gravity="start"

            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_action"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/_20sdp"
            android:src="@drawable/edit"
            android:textAlignment="center"
            app:tint="@color/black" />
    </LinearLayout>

</LinearLayout>
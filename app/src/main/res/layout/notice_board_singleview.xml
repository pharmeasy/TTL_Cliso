<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:id="@+id/parent_ll"
    android:layout_margin="3dp"
    android:background="@color/light_pink"
    android:orientation="vertical"
    >

    <LinearLayout
        android:id="@+id/ack_id"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/right_angled_triangle_maroon_nb" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:background="@color/maroon"
            android:gravity="center"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:text="Tap to acknowledge"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/senderId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ack_id"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:text="Sender"
        android:textColor="@color/DARKGray"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msgtext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/senderId"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="7dp"
        android:text="msg"
        android:textColor="@color/DARKGray"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/notice_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgtext"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:text="Friday, 11 Jan 2019 | 12:00 PM"
        android:textAlignment="textEnd"
        android:textColor="@color/DARKGray"
        android:textSize="10sp"
        android:textStyle="bold"
        />
</RelativeLayout>
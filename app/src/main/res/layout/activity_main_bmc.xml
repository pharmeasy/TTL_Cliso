<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cliso_BMC.BMC_MainActivity">

    <LinearLayout
        android:id="@+id/linear_layout"
        style="@style/heading_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cement_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/colorBlack"
        android:weightSum="5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/title"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center|left"
            android:text="PATIENT DETAILS"
            android:textColor="@color/maroon"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img_communication"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:src="@drawable/cm"
            android:textColor="@color/colorBlack"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/img_report"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:padding="@dimen/dp_2"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:src="@drawable/feedbk"
            android:textColor="@color/colorBlack"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_material"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:padding="@dimen/dp_2"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:src="@drawable/ic_material"
            android:textColor="@color/colorBlack"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/img_logout"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_26"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/ic_logout"
            android:textColor="@color/colorBlack" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </RelativeLayout>

</LinearLayout>
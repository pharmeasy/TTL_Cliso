<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="@dimen/_4sdp"
            android:weightSum="2"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textColor="@color/maroon"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/_2sdp"
                android:background="@color/white"
                android:text="Scan : "
                android:fontFamily="@font/gotham_bold"
                tools:ignore="RtlCompat" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="@dimen/_40sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_4sdp"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:orientation="vertical"
                    android:layout_weight="3"
                    android:layout_gravity="center"
                    android:background="@drawable/corner_curve_maroon"
                    android:layout_height="@dimen/_30sdp">

                    <TextView
                        android:id="@+id/txt_barcode"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:fontFamily="@font/gotham_book"
                        android:textAlignment="center"
                        android:textAllCaps="true" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/element1_iv"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:onClick="ScanBar"
                    android:src="@drawable/barcode_scanner" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_scansubmit"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/maroon"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:fontFamily="@font/gotham_bold"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:text="@string/btnsubmit" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="@dimen/_40sdp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textColor="@color/maroon"
                android:textSize="@dimen/_10sdp"
                android:gravity="center"
                android:textAllCaps="true"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/_2sdp"
                android:background="@color/white"
                android:text="@string/txt_waste_cnt"
                android:fontFamily="@font/gotham_bold"
                tools:ignore="RtlCompat" />

            <EditText
                android:id="@+id/edt_wastecnt"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:textColor="@color/black"
                android:background="@drawable/edt_bg"
                android:maxLines="2"
                android:paddingLeft="@dimen/_6sdp"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/gotham_book"
                android:inputType="number"
                android:layout_height="@dimen/_30sdp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:textColor="@color/maroon"
                android:textSize="@dimen/_10sdp"
                android:fontFamily="@font/gotham_bold"
                android:gravity="center"
                android:textAllCaps="true"
                android:textAlignment="viewStart"
                android:paddingLeft="@dimen/_2sdp"
                android:background="@color/white"
                android:text="@string/reason_waste"
                tools:ignore="RtlCompat" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:background="@drawable/edt_bg"
                android:orientation="vertical"
                android:layout_height="@dimen/_80sdp">

                <EditText
                    android:id="@+id/edt_reason"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_margin="@dimen/_6sdp"
                    android:fontFamily="@font/gotham_book"
                    android:textSize="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_6sdp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:inputType="textMultiLine" />

            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btn_reason_submit"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_30sdp"
            android:background="@color/maroon"
            android:textSize="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_14sdp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:fontFamily="@font/gotham_bold"
            android:textColor="@color/white"
            android:text="@string/btnsubmit" />

    </LinearLayout>


</LinearLayout>
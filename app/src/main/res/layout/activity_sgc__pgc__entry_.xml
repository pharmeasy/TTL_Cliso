<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RevisedScreenNewUser.Sgc_Pgc_Entry_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lightgray"
        android:orientation="horizontal"
        android:weightSum="5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/color_back" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:gravity="center"
            android:text="SGC/PGC Entry"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:src="@drawable/color_homr" />
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:layout_weight="3.7">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="8"
                    android:background="@drawable/maroon_border_white_bg"
                    android:orientation="vertical"
                    android:paddingTop="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/latlong"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/grey_curve_border"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:ems="10"
                        >
                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:src="@drawable/placepicker"
                            />
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Latitude"
                            android:id="@+id/lattitude_txt"
                            android:maxLength="14"
                            android:gravity="center|left"
                            android:textColor="@color/black"
                            android:layout_marginRight="2dp"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:hint="Longitude"
                            android:maxLength="15"
                            android:gravity="center|left"
                            android:id="@+id/longitude_txt"
                            android:textColor="@color/black"
                            android:layout_marginLeft="2dp"
                            android:paddingLeft="5dp"
                            android:textSize="12sp"
                            />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/pincode_edt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="0123456789"
                        android:hint="@string/enter_pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:paddingLeft="6dp"
                        android:textSize="12sp"></EditText>

                    <EditText
                        android:id="@+id/mobile_edt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="0123456789"
                        android:ems="10"
                        android:hint="@string/enter_mobile_number"
                        android:inputType="number"
                        android:maxLength="10"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp"></EditText>

                    <EditText
                        android:id="@+id/email_edt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/enter_email_address"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/client_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.@_ "
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/enter_client_name"
                        android:inputType="textCapCharacters"
                        android:maxLength="25"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:id="@+id/dr_name_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/dr_name"
                            style="@style/medium_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/textView"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center|left"
                            android:inputType="textEmailAddress"
                            android:text="DR"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></TextView>

                        <EditText
                            android:id="@+id/dr_name_edt"
                            style="@style/medium_text"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_below="@+id/textView"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_weight="4"
                            android:background="@drawable/background_edt"
                            android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.@_ "
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="Enter Name"
                            android:inputType="textCapCharacters"
                            android:maxLength="25"
                            android:paddingLeft="6dp"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></EditText>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/address_layout"
                        style="@style/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.,:/@0123456789 "
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="Enter Address  "
                        android:inputType="textEmailAddress"
                        android:maxLines="4"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp"
                        android:visibility="gone"></EditText>
                </LinearLayout>

                <Spinner
                    android:id="@+id/sgc_pgc_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/corner_curve_maroon"
                    android:backgroundTint="@color/maroon"
                    android:popupBackground="@color/maroon"></Spinner>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:layout_weight="4.9">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="20dp"
                    android:layout_weight="9"
                    android:background="@drawable/maroon_border_white_bg"
                    android:orientation="vertical"
                    android:paddingTop="20dp">


                    <EditText
                        android:id="@+id/incharge_name"
                        style="@style/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.@_ "
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/incharge_name"
                        android:inputType="textCapCharacters"
                        android:maxLength="25"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp"></EditText>

                    <EditText
                        android:id="@+id/address"
                        style="@style/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.,:/@0123456789 "
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/enter_address"
                        android:inputType="textEmailAddress"
                        android:maxLines="4"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp"></EditText>

                    <EditText
                        android:id="@+id/phone_number"
                        style="@style/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="0123456789"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/enter_phone_number_ex_022_7878787"
                        android:inputType="number"
                        android:maxLength="11"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/website_edt"
                        style="@style/medium_text"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.@_"
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/enter_website"
                        android:inputType="textWebEmailAddress"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp"></EditText>

                    <LinearLayout
                        android:id="@+id/visiting_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp">

                        <TextView
                            style="@style/medium_text"
                            android:layout_width="106dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:padding="5dp"
                            android:background="@drawable/background_edt"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="@string/visiting_card"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></TextView>

                        <ImageView
                            android:id="@+id/correct_img"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ems="10"
                            android:padding="5dp"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:src="@drawable/right_data"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:visibility="gone"></ImageView>

                        <ImageView
                            android:id="@+id/cross_img"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:padding="5dp"
                            android:inputType="textEmailAddress"
                            android:src="@drawable/cross_img"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:visibility="gone"></ImageView>

                        <Button
                            android:id="@+id/visiting_card_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="3dp"
                            android:layout_weight="1.5"
                            android:background="@drawable/maroon_rect_box"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="Choose File"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/white"
                            android:textSize="12sp"></Button>
                    </LinearLayout>


                </LinearLayout>

                <Spinner
                    android:id="@+id/brand_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/corner_curve_maroon"
                    android:backgroundTint="@color/maroon"></Spinner>

                <Spinner
                    android:id="@+id/qualification_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="34dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:layout_weight="2"
                    android:background="@drawable/corner_curve_maroon"
                    android:backgroundTint="@color/maroon"
                    android:visibility="gone"></Spinner>
            </RelativeLayout>


            <Button
                android:id="@+id/next_btn_sgc_pgc"
                style="@style/hint_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="0.7"
                android:background="@drawable/next_button"
                android:padding="5dp"
                android:text="Next"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>

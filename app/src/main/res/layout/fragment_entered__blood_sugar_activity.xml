<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:windowBackground">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:windowBackground"
        android:orientation="vertical"
        tools:context=".RevisedScreenNewUser.Sgc_Pgc_Entry_Activity">


        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="16dp"
                    android:layout_weight="8"
                    android:background="@drawable/maroon_border_white_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/mobile_edt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_curve_border"
                            android:digits="0123456789"
                            android:ems="10"
                            android:hint="@string/bs_enter_mobile_number"
                            android:inputType="number"
                            android:maxLength="10"
                            android:paddingLeft="6dp"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></EditText>


                        <Button
                            android:id="@+id/mbl_verify"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/maroon_rect_box"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:padding="4dp"
                            android:text="Verify"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/white"
                            android:textSize="12sp"></Button>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/client_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_below="@+id/textView"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:digits="QWERTYUIOPLKJHGFDSAZXCVBNMqwertyuiopasdfghjklzxcvbnm.@_ "
                        android:ems="10"
                        android:gravity="center|left"
                        android:hint="@string/bs_pt_name"
                        android:inputType="textCapCharacters"
                        android:maxLength="25"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_val"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_curve_border"
                            android:digits="0123456789"
                            android:ems="10"
                            android:hint="@string/bs_age"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingLeft="6dp"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></EditText>

                        <LinearLayout
                            android:id="@+id/radiogrp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <ImageView
                                android:id="@+id/male"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/male_white"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/male_red"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/red_male"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:background="@color/grey" />

                            <ImageView
                                android:id="@+id/female"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/female_white"
                                android:text="FEMALE"
                                android:textSize="12sp" />

                            <ImageView
                                android:id="@+id/female_red"
                                android:layout_width="0dp"
                                android:layout_height="30dp"
                                android:layout_weight="1"
                                android:src="@drawable/red_female"
                                android:text="FEMALE"
                                android:textSize="12sp"
                                android:visibility="gone" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/corner_curve_maroon"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Spinner
                            android:id="@+id/spin_bs_test"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:backgroundTint="@color/transparent"
                            android:gravity="center_vertical"
                            android:minHeight="40dp">

                        </Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_age"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:background="@drawable/grey_curve_border"
                            android:digits="0123456789"
                            android:ems="10"
                            android:hint="@string/bs_value"
                            android:inputType="number"
                            android:maxLength="3"
                            android:paddingLeft="6dp"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></EditText>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/txt_ref_msg"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="Ref. Range: 70-99"
                                android:textColor="@color/maroon"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/visiting_card_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:background="@drawable/grey_curve_border"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingLeft="6dp">

                        <TextView
                            style="@style/medium_text"
                            android:layout_width="106dp"
                            android:layout_height="match_parent"
                            android:layout_alignParentLeft="true"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/background_edt"
                            android:ems="10"
                            android:gravity="center|left"
                            android:hint="@string/img_upload"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textColor="@color/DARKGray"
                            android:textSize="12sp"></TextView>

                        <ImageView
                            android:id="@+id/correct_img"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:src="@drawable/right_data"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:visibility="gone"></ImageView>

                        <ImageView
                            android:id="@+id/cross_img"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:src="@drawable/cross_img"
                            android:textColor="@color/colorWhite"
                            android:textSize="12sp"
                            android:visibility="gone"></ImageView>

                        <Button
                            android:id="@+id/visiting_card_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:layout_marginBottom="3dp"
                            android:background="@drawable/maroon_rect_box"
                            android:gravity="center"
                            android:hint="Choose File"
                            android:inputType="textEmailAddress"
                            android:padding="5dp"
                            android:textColor="@color/colorWhite"
                            android:textColorHint="@color/white"
                            android:textSize="12sp"></Button>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edt_email"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/grey_curve_border"
                        android:gravity="center|left"
                        android:hint="@string/bs_enter_email_address"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="6dp"
                        android:textColor="@color/DARKGray"
                        android:textSize="12sp" />


                </LinearLayout>

                <Button
                    android:id="@+id/btn_submit_bs"
                    style="@style/hint_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="0.7"
                    android:background="@drawable/next_button"
                    android:padding="5dp"
                    android:text="Submit"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>


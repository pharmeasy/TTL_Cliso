<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/new_patient_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:orientation="vertical"
    tools:context="com.example.e5322.thyrosoft.RevisedScreenNewUser.Woe_Edt_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/linear_layout"
        android:orientation="horizontal"
        android:background="@color/lightgray"
        android:textColor="@color/colorBlack"
        style="@style/heading_text"
        android:weightSum="5"
        android:gravity="center">
        <ImageView
            android:src="@drawable/color_back"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_margin="3dp"
            android:layout_height="match_parent"
            android:id="@+id/back"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            style="@style/heading_text"
            android:gravity="center"
            ></ImageView>

        <TextView
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/title"
            android:background="@color/colorWhite"
            android:textColor="@color/maroon"
            style="@style/heading_text"
            android:gravity="center"
            ></TextView>

        <ImageView
            android:src="@drawable/color_homr"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/home"
            android:layout_margin="3dp"
            android:background="@color/colorWhite"
            android:textColor="@color/colorBlack"
            style="@style/heading_text"
            android:gravity="center"
            ></ImageView>
    </LinearLayout>



    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="75"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/brand_name_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/brand_name"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/type_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/selectType_txt"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/source_code_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/medium_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:text="Sub Source Code"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
                <TextView
                    android:id="@+id/sub_source_code"
                    style="@style/medium_text"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/namePatients"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="5">

                <EditText
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1dp"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/background_edt"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ "
                    android:inputType="textCapCharacters"
                    android:maxLength="25"
                    android:maxLines="1"
                    android:hint="ENTER YOUR NAME"
                    android:textSize="12sp"></EditText>
                <requestFocus />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/AGE_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:weightSum="5">

                <EditText
                    android:id="@+id/age_edt"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/background_edt"
                    android:inputType="number"
                    android:maxLength="3"
                    android:hint="ENTER YOUR AGE"
                    android:textSize="12sp"></EditText>

                <Spinner
                    android:id="@+id/spinyr"
                    style="@style/medium_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center|left" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gender_layout"
                android:layout_width="match_parent"
                android:padding="5dp"
                android:layout_margin="2dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <RadioGroup
                            android:id="@+id/radiogrp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RadioButton
                                android:id="@+id/male"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:text="MALE"
                                android:buttonTint="@color/maroon"
                                android:textSize="12sp"
                                />

                            <RadioButton
                                android:id="@+id/female"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:buttonTint="@color/maroon"
                                android:textSize="12sp"
                                android:text="FEMALE" />
                        </RadioGroup>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/time_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    style="@style/medium_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:drawableRight="@drawable/red_small_cal"
                    android:gravity="right"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/sct_txt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/labname_linear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:id="@+id/samplecollectionponit"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:textColorHint="@color/black"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/refby_linear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:weightSum="5">
                <TextView
                    android:id="@+id/referedby"
                    android:textColorHint="@color/black"
                    style="@style/medium_text"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:ems="10"
                    android:gravity="center|left"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/barcode_ll"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColorHint="@color/black"
                    style="@style/medium_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Barcode"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView"
                    android:background="@drawable/background_edt"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>
                <TextView
                    android:id="@+id/barcode_number"
                    android:textColorHint="@color/black"
                    style="@style/medium_text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView"
                    android:background="@drawable/background_edt"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/test_names_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                >
                <TextView
                    android:textColorHint="@color/black"
                    style="@style/medium_text"
                    android:text="Test"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>
                <TextView
                    android:id="@+id/test_names_txt"
                    android:textColorHint="@color/black"
                    style="@style/medium_text"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp">
                </TextView>
            </LinearLayout>

            <Button
                android:id="@+id/next_btn_patient"
                style="@style/hint_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:background="@drawable/maroon_rect_box"
                android:padding="5dp"
                android:text="Done"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

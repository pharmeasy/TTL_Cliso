            <LinearLayout
                android:id="@+id/id_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <EditText
                    android:id="@+id/id_for_woe"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ01234567890"
                    android:ems="10"
                    android:hint="ENTER ID"
                    android:inputType="textCapCharacters"
                    android:maxLength="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="18sp">

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/barcode_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <EditText
                    android:id="@+id/barcode_woe"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ01234567890"
                    android:ems="10"
                    android:hint="ENTER BARCODE"
                    android:inputType="textCapCharacters"
                    android:maxLength="8"
                    android:textColor="@color/DARKGray"
                    android:textSize="18sp">

                    <requestFocus />
                </EditText>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/leadbarcodelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Patient info"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadbarcodename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadidbarcodetest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="test"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadbarcoderefdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="refdr"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadbarcodesct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="SCT"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"

                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/leadlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/leadname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="Name"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadidtest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="test"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/leadrefdr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:text="refdr"
                    android:textColor="@color/colorBlack"
                    android:textSize="12sp"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_linear_data"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <EditText
                    android:id="@+id/patientAddress"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@drawable/background_edt"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz 0123456789-,.\()/"
                    android:ems="10"
                    android:hint="ENTER PATIENT ADDRESS"
                    android:textColor="@color/DARKGray"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/camp_layout_woe"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/border_background"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <Spinner
                    android:id="@+id/camp_spinner_olc"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/btech_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="5">

                <Spinner
                    android:id="@+id/btech_spinner"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:ems="10"
                    android:textColor="@color/DARKGray"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/labname_linear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <TextView
                    android:id="@+id/samplecollectionponit"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edt"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz .,:"
                    android:drawableRight="@drawable/downarrow"
                    android:ems="10"
                    android:gravity="center|left"
                    android:hint="A W DIABETES SPECIALITY CENTER"
                    android:textColor="@color/DARKGray"
                    android:textColorHint="@color/secondary_text"
                    android:textSize="13sp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ref_check_linear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="5">

                <ImageView
                    android:id="@+id/ref_by_self_img"
                    android:layout_width="72dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_check_box_black_24dp" />

                <TextView
                    android:id="@+id/ref_by_self_tv"
                    style="@style/medium_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:ems="10"
                    android:gravity="center|left"
                    android:text="   Reference by Self"
                    android:textColor="@color/DARKGray"
                    android:textColorHint="@color/secondary_text"
                    android:textSize="15sp"></TextView>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_clear_data"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/clear_button"
                    android:text="Clear"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/next_btn_patient"
                    style="@style/hint_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/next_button"
                    android:padding="5dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="15sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginTop="-1dp"
        android:layout_weight="1"
        android:scaleType="fitXY"
        android:src="@drawable/rev_triangle" />
</LinearLayout>

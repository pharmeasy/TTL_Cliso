<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Cliso_BMC.BMC_UpdateMaterialActivity">

    <LinearLayout
        style="@style/heading_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/cement_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@color/colorBlack"
        android:weightSum="5">

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:src="@drawable/color_back"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/title"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center"
            android:text="STOCK AVAILABILITY"
            android:textColor="@color/maroon"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/home"
            style="@style/heading_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="0.5"
            android:gravity="center"
            android:src="@drawable/color_homr"
            android:textColor="@color/colorBlack" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Opening stock"
            android:textColor="@color/black"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

        <EditText
            android:id="@+id/edt_opStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@drawable/corner_curve_white"
            android:digits="@string/stock_digits"
            android:editable="false"
            android:enabled="false"
            android:maxLength="20"
            android:padding="@dimen/dp_8"
            android:textColor="@color/grey"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Used stock"
            android:textColor="@color/black"
            android:textSize="@dimen/label"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/edt_usedStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@drawable/corner_curve_white"
            android:digits="@string/stock_digits"
            android:maxLength="10"
            android:padding="@dimen/dp_8"
            android:textColor="@color/grey"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Wastage stock"
            android:textColor="@color/black"
            android:textSize="@dimen/label"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/edt_wastageStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@drawable/corner_curve_white"
            android:digits="@string/stock_digits"
            android:maxLength="10"
            android:padding="@dimen/dp_8"
            android:textColor="@color/grey"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Defective stock"
            android:textColor="@color/black"
            android:textSize="@dimen/label"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/edt_defStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@drawable/corner_curve_white"
            android:digits="@string/stock_digits"
            android:maxLength="10"
            android:padding="@dimen/dp_8"
            android:textColor="@color/grey"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_8"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_8"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_weight="2"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:text="Closing stock"
            android:textColor="@color/black"
            android:textSize="@dimen/label"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/edt_clStock"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:background="@drawable/corner_curve_white"
            android:digits="@string/stock_digits"
            android:editable="false"
            android:enabled="false"
            android:maxLength="20"
            android:padding="@dimen/dp_8"
            android:textColor="@color/grey"
            android:textSize="@dimen/label"
            android:textAllCaps="true"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@drawable/next_button"
        android:text="Submit"
        android:textAllCaps="true"
        android:textColor="@color/white" />

</LinearLayout>
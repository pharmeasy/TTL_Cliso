<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/Gray</item>
        <item name="colorPrimaryDark">@color/colortoolbar</item>
        <item name="colorAccent">@color/maroon</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
        <!--   your app branding color for the app bar -->

    </style>

    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">@dimen/NormalTextSize</item>
        <item name="android:textColorHint">@color/black</item>
    </style>


    <style name="AppThemeDark" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
    </style>
    <!-- This will set the fade in animation on all your activities by default -->
    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>



    <style name="DrawerHamburgerStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorlevendor2</item>
    </style>

    <style name="SpinnerStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:divider">@color/entered</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <style name="NavigationView" parent="">
        <item name="android:listDivider">@color/maroon</item>
        <item name="android:background">@drawable/white_dotted_line</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:verticalGap">5dp</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/maroon</item>
    </style>

    <style name="ProgressBarColor" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/maroon</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerHamburgerStyle</item>
    </style>


</resources>
